{
	"useTabs": true,
	"tabWidth": 4,
	"singleQuote": true,
	"arrowParens": "avoid",
	"proseWrap": "never",
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrder": [
		"<BUILTIN_MODULES>",
		"<THIRD_PARTY_MODULES>",
		"<TYPES>",
		"^@components/(.*)$",
		"^@layouts/(.*)$",
		"^@sections/(.*)$",
		"^[./]"
	],
	"plugins": [
		"prettier-plugin-astro",
		"@trivago/prettier-plugin-sort-imports"
	],
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	]
}
