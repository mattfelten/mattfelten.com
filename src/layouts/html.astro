---
import favicons from './favicon.html?raw';

import '@assets/fonts/nudica.css';
import '@assets/global.css';

const { title: pageTitle } = Astro.props;
const title = [pageTitle && `${pageTitle} `, 'Matt Felten'].join(' ');
---

<style>
	html {
		position: relative;
	}

	html::after {
		content: '';
		background-size: 30px 30px;
		background-image: radial-gradient(
			ellipse at center,
			var(--color-default) 0%,
			transparent 10% /* 30px * .1 = 3px */
		);
		background-repeat: repeat;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		position: absolute;
		z-index: -1;
		min-height: 100vh;

		opacity: 0.15;
	}
</style>

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		/>
		<title>{title}</title>
		<Fragment set:html={favicons} />
	</head>
	<body
		class="bg-background text-default mx-auto max-w-screen-2xl space-y-8 p-3 font-sans text-base antialiased sm:p-6"
	>
		<slot />
	</body>
</html>
