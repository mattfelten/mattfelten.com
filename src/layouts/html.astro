---
import favicons from './favicon.html?raw';
import '../assets/fonts/nudica.css';
const { title: pageTitle } = Astro.props;
const title = ['Matt Felten', pageTitle && `Ã— ${pageTitle}`].join(
	' '
);
---

<style>
	html {
		position: relative;

		&::after {
			content: '';
			background-size: 30px 30px;
			background-image: radial-gradient(
				ellipse at center,
				var(--color-default) 0%,
				transparent 10% /* 30px * .1 = 3px */
			);
			background-repeat: repeat;
			top: 0;
			bottom: 0;
			left: 0;
			right: 0;
			position: absolute;
			z-index: -1;
			min-height: 100vh;

			opacity: 0.2;
			@media (prefers-color-scheme: dark) {
				opacity: 0.25;
			}
		}
	}
</style>

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		/>
		<title>{title}</title>
		<Fragment set:html={favicons} />
	</head>
	<body
		class="p-3 sm:p-6 space-y-8 font-sans text-base antialiased bg-background text-default max-w-screen-2xl mx-auto"
	>
		<slot />
	</body>
</html>
