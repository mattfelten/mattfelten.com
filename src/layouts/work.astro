---
import Layout from './default.astro';
const { title, content } = Astro.props;
---

<style is:global>
	.prose hr {
		opacity: 0.15;
	}
</style>
<Layout title={title || `${content.company} ${content.title}`}>
	<article
		class="prose-xl lg:prose-2xl prose-h1:text-4xl lg:prose-h1:text-5xl prose-h1:font-medium prose-h2:font-medium prose-h3:font-medium dark:prose-white prose-headings:text-pretty mx-auto"
	>
		<div class="flex flex-col gap-1">
			<div class="text-lg font-semibold text-subdued">
				{content.company}
			</div>
			<h1>{content.title}</h1>
		</div>
		<slot />
	</article>
</Layout>
