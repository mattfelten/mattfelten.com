---
import { SpinnerCircularFixed } from 'spinners-react/lib/esm/SpinnerCircularFixed';

import { PasswordProtected } from '@components/PasswordProtected';
import HTML from '@layouts/html.astro';

import gallery from './_gallery.png';
---

<HTML>
	<PasswordProtected password="gallery2024" client:only>
		<SpinnerCircularFixed
			size={32}
			thickness={100}
			speed={200}
			color="#36ad47"
			secondaryColor="rgba(0, 0, 0, 0.44)"
			className="fixed top-1/2 left-1/2 z-[-1] -mt-2 -ml-2"
			client:load
		/>
		<div
			style={{
				backgroundImage: `url(${gallery.src})`,
				backgroundRepeat: 'no-repeat',
				backgroundSize: 'contain',
				width: '100%',
				aspectRatio: 2000 / 19870,
			}}
		>
		</div>
	</PasswordProtected>
</HTML>
