---
import { getCollection } from 'astro:content';
import ResumeJob from '../components/ResumeJob.astro';
import Layout from '../layout/default.astro';

const work = (await getCollection('work')).sort(
	(a, b) => b.data.start.valueOf() - a.data.start.valueOf()
);
---

<Layout>
	<section
		class="space-y-2 text-3xl leading-snug mt-7 lg:space-y-1 line-length-lg"
	>
		<p>
			Design leader with over 15 years of experience based in Los Angeles.
			Specializes in building thoughtful teams who solve
			technologically-complex problems through collaboration, data,
			research, and hard work.
		</p>
	</section>
	<section>
		<ol class="space-y-5">
			{work.map(job => <ResumeJob job={job} />)}
		</ol>
	</section>
</Layout>
