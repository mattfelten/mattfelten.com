---
const Tag = Astro.url.pathname === '/' ? 'h1' : 'h3';
const isHomepage = Astro.url.pathname === '/';
---

<style>
	a {
		display: block;

		@apply text-default;
		@apply font-bold;
		@apply text-xl;
		@apply hover;
	}
</style>

{
	!isHomepage && (
		<Tag>
			<a href="/">Matt Felten</a>
		</Tag>
	)
}
