---
import {
	SiTwitter,
	SiGithub,
	SiMedium,
	SiDribbble,
	SiInstagram,
	SiSpotify,
	SiLinkedin,
} from '@icons-pack/react-simple-icons';

const social = [
	{
		icon: SiTwitter,
		url: '//twitter.com/mattfelten',
	},
	{
		icon: SiGithub,
		url: '//github.com/mattfelten',
	},
	{
		icon: SiMedium,
		url: '//medium.com/@mattfelten',
	},
	{
		icon: SiDribbble,
		url: '//dribbble.com/mattfelten',
	},
	{
		icon: SiInstagram,
		url: '//instagram.com/mattfelten',
	},
	{
		icon: SiSpotify,
		url: '//open.spotify.com/user/mattfelten',
	},
	{
		icon: SiLinkedin,
		url: '//linkedin.com/in/mattfelten/',
	},
];
---

<style>
	div {
		display: flex;
		justify-content: space-between;
		@apply py-2;
	}

	@keyframes wave {
		0% {
			transform: rotate(0deg);
		}
		15% {
			transform: rotate(14deg);
		} /* The following five values can be played with to make the waving more or less extreme */
		30% {
			transform: rotate(-8deg);
		}
		45% {
			transform: rotate(14deg);
		}
		60% {
			transform: rotate(-4deg);
		}
		75% {
			transform: rotate(10deg);
		}
		100% {
			transform: rotate(0deg);
		}
	}
	.home {
		display: block;
		font-weight: bold;

		@media (max-width: 440px) {
			display: none;
		}

		&::after {
			opacity: 0;
			transition: opacity 0.2s;
			content: 'ðŸ‘‹';
			margin-left: 0.5em;
			display: inline-block;
			animation-name: wave;
			animation-duration: 1.5s;
			animation-iteration-count: infinite;
			transform-origin: 70% 70%;
		}

		&:hover::after {
			opacity: 1;
		}
	}

	.social {
		display: flex;
		gap: theme(spacing.2);
		align-self: flex-end;

		a {
			display: block;
			opacity: 0.4;
			@apply hover;

			&:hover {
				opacity: 1;
			}
		}
	}
</style>

<div>
	<a class="home" href="/">Matt Felten</a>

	<ul class="social">
		{
			social.map(({ icon: Icon, url }, i) => (
				<li>
					<a href={url}>
						<Icon width={18} />
					</a>
				</li>
			))
		}
	</ul>
</div>
