---
import Layout from './default.astro';
const { title } = Astro.props.frontmanter || Astro.props;
---

<style is:global>
	.prose hr {
		opacity: 0.15;
	}
</style>
<Layout title={title}>
	<article
		class="prose lg:prose-2xl prose-h1:text-5xl prose-h1:font-medium prose-h2:font-medium prose-h3:font-medium dark:prose-white prose-headings:text-pretty mx-auto"
	>
		<slot />
	</article>
</Layout>
